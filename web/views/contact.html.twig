{% extends './templates/base.html.twig' %}
{% block content %}
          <div class="container">
          <div class="row">
              <div class="row mt-1 mb-1">
            <div class="col">
                <h1 class="page-header text-center text-uppercase">Contact Us</h1>
            </div>

          <div class="row">
              <!-- Section Title -->
              <div class="col-md-6 mt-5">
              <h1 class="section-title">We'd Love to Hear From You</h1>
                <p>Contact us during our open hours via our phone number listed below or come visit us at our location to get yourself a coffee.
                Alternatively message our team via the form and we will get to your reply with any issues that you may have as soon as possible.</p>
                <div class="find-widget">
                 Company:  <a href="/">Coffee Buzz</a>
                </div>
                <div class="find-widget">
                 Address: <a href="#">13 Kenneth Road, Melbourne, Australia</a>
                </div>
                <div class="find-widget">
                  Phone:  <a href="#">+64 04151354</a>
                </div>
                <div class="find-widget">
                  Website:  <a href="/">www.coffeebuzz.com</a>
                </div>
                <div class="find-widget">
                   Open Hours: <a href="#">Mon to Sat: 09:30 AM - 10.30 PM</a>
                </div>
              </div>
              <!-- contact form -->
              <div class="col-md-6 mt-5">
                  <form action="mailto:matthieuetienne0104@gmail.com" class="container" role="form" method="post" id="contactForm" name="contact-form" data-toggle="validator">
                      <!-- Name -->
                      <div class="form-group">
                        <label class="control-label" for="name">Name</label>
                        <input class="form-control" id="name" type="text" name="name" required data-error="Please enter your name">
                        <div class="help-block with-errors"></div>
                      </div>
                      <!-- email -->
                      <div class="form-group">
                        <label class="control-label" for="email">Email</label>
                        <input class="form-control" id="email" type="email" name="email" required data-error="Please enter your Email">
                        <div class="help-block with-errors"></div>
                      </div>
                      <!-- Subject -->
                      <div class="form-group">
                        <label class="control-label">Subject</label>
                        <input class="form-control" id="msg_subject" type="text" name="subject" required data-error="Please enter your message subject">
                        <div class="help-block with-errors"></div>
                      </div>
                      <!-- Message -->
                      <div class="form-group">
                          <label for="message" class="control-label">Message</label>
                          <textarea class="form-control" rows="3" id="message" name="message" required data-error="Write your message"></textarea>
                          <div class="help-block with-errors"></div>
                      </div>
                      <!-- Form Submit -->
                      <div class="form-submit">
                          <button class="btn btn-common" type="submit" id="form-submit"><i class="material-icons mdi mdi-message-outline"></i> Send Message</button>
                          <div id="msgSubmit" class="h3 text-center hidden"></div>
                          <div class="clearfix"></div>
                      </div>
                  </form>
              </div>
          </div>
      </div>
{% endblock %}
