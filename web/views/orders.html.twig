{% extends './templates/base-staff.html.twig' %}
{% block content %}
    <div class="container">
        <h1 class="page-header text-center text-uppercase">{{ title }}</h1>
        <table style="width:100%">
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Time</th>
                <th>Items</th>
                <th></th>
                <th></th>
            </tr>
            {% for order in orders %}
                <tr>
                    <form method="post">
                    <td>{{ order.id }}</td>
                    <td>{{ order.customer }}</td>
                    <td>{{ order.time|time_diff }}</td>
                        <td></td>
                        <td></td>
                        <td>
                            <input type="hidden" class="form-control" id="orderid" value="{{ order.id }}" name="orderid">
                            <button class="btn btn-primary btn-block">Completed</button>
                        </td>
                    </form>
                </tr>
                {% set items = order.items|replace({'[':"",']':"",'"':""})|split(',') %}
                {% for item in items %}
                    {% set components = item|split(':') %}
                    {% for menuItem in menu %}
                        {% if menuItem.id == components[0] %}
                            <tr>
                                <td colspan="3"></td>
                                <td>{{ menuItem.name }}</td>
                                {% if components|length >1 %}
                                    <td>Size : {{ components[1] }}</td>
                                {% endif %}
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endfor %}
            {% endfor %}
        </table>
    </div>
{% endblock %}